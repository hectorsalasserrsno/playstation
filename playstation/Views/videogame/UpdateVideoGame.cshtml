@model VideoGame

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateVideoGameToDatabase", "VideoGame", "Post"))
{
    <input asp-for="id" type="hidden" value="@Model.id" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="CurrentPrice" class="control-label">Current Price</label>
    <input type="number" step="0.01" name="CurrentPrice" class="form-control" value="@Model.CurrentPrice" />

    <label asp-for="Publisher" class="control-label">Publisher</label>
    <input type="text" step="0.01" name="Publisher" class="form-control" value="@Model.Publisher" />

    <label asp-for="ReleasedDate" class="control-label">Released Date</label>
    <input type="date" step="0.01" name="Releaseddate" class="form-control" value="@Model.ReleasedDate" />

    <label asp-for="Genre" class="control-label">Genre</label>
    <input type="text" step="0.01" name="Genre" class="form-control" value="@Model.Genre" />
    
    
    <input type="submit" value="Update VideoGame" class="btn btn-primary" />
}
